<body class="text-center">
  <%= form_with url: '/sessions', method: :post, :html => { class: "form-signin" }, local: true do |f| %>
    <%= image_tag("/assets/date-night-logo.png", :class => 'mb-4', style: "height:57;width:72;") %>
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
    <%= f.email_field :email, { class: "form-control", placeholder: "Email address", label_html: { class: "sr-only" } } %>
    <%= f.password_field :password, { class: "form-control", placeholder: "Password", label_html: { class: "sr-only" } } %>
    <%= f.submit 'Login', { class: "form-control btn btn-lg btn-primary btn-block" } %>
  <% end %>
  <br>
  <h6>Don't have an account yet? Register <%= link_to "here", new_user_path %></h6>
</body>


