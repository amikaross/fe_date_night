<%= render "shared/navbar" %>

<div class="py-5 text-center">

  <div id="search_places_form">
    <%= form_with url: places_path, method: :get, local: true do |f| %>
      <%= f.text_field :search_term, placeholder: "Keyword search" %><br><br>
      <%= f.submit 'Submit' %>
    <% end %>
  </div>
</div>

<div class="container">
  <table class="table">
  <tbody>
    <% @results.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.vicinity %></td>
        <td>Google Rating: <%= place.rating%></td>
        <td><%= link_to "See More", place_path(place.place_id) %></td>
      <tr>
    <% end %>
  </tbody>
  </table>
</div>