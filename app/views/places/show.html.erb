<%= render "shared/navbar" %>

<div class="container">
  <h1><%= @place.name %></h1>
  <%= button_to "Add To Favorites", favorites_path(:place_id => @place.place_id, :name => @place.name), method: :post %>
  <%= button_to "Make it a date!", new_appointment_path, params: { place_info: [@place.name, @place.place_id] }, method: :get %>

  <img src=<%= @place.photo %> alt="Photo of <%= @place.name %>" width="400">
  <p>Summary: <%= @place.summary %></p>
  <p>Hours: 
    <% @place.hours_array.each do |day| %>
      <p><%= day %></p>
    <% end %>
  </p>
  <p>phone number: <%= @place.phone %></p>
  <p>address: <%= @place.address %></p>
  <p>rating: <%= @place.rating %></p>
</div>